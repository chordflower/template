  <build>
    <sourceDirectory>src/main/kotlin</sourceDirectory>
    <testSourceDirectory>src/test/kotlin</testSourceDirectory>
    <resources>
      <resource>
        <directory>${resources.directory}</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>buildnumber-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>flatten-maven-plugin</artifactId>
        <configuration>
          <pomElements>
            <build>resolve</build>
            <ciManagement>remove</ciManagement>
            <contributors>remove</contributors>
            <dependencies>resolve</dependencies>
            <dependencyManagement>flatten</dependencyManagement>
            <description>remove</description>
            <developers>remove</developers>
            <distributionManagement>remove</distributionManagement>
            <inceptionYear>remove</inceptionYear>
            <issueManagement>remove</issueManagement>
            <name>expand</name>
            <organization>remove</organization>
            <parent>remove</parent>
            <pluginManagement>remove</pluginManagement>
            <pluginRepositories>resolve</pluginRepositories>
            <profiles>resolve</profiles>
            <properties>resolve</properties>
            <reporting>resolve</reporting>
            <repositories>expand</repositories>
            <scm>remove</scm>
            <url>remove</url>
            <version>expand</version>
            <!--
expand: Take the element from the effective POM.
flatten: Flatten the element.
interpolate: Take the element from the interpolated POM (original POM with variables interpolated).
keep: Take the element untouched from the original POM.
remove: Remove the element entirely so it will not be present in flattened POM.
resolve: Take the element from the resolved POM.
            -->
          </pomElements>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.jetbrains.kotlin</groupId>
        <artifactId>kotlin-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.jetbrains.dokka</groupId>
        <artifactId>dokka-maven-plugin</artifactId>
        <configuration>
          <outputDir>${project.reporting.outputDirectory}</outputDir>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>generate-beans-from-json-schema</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.jsonschema2pojo</groupId>
            <artifactId>jsonschema2pojo-maven-plugin</artifactId>
            <version>1.0.2</version>
            <executions>
              <execution>
                <id>generate-config-beans</id>
                <phase>generate-sources</phase>
                <goals>
                  <goal>generate</goal>
                </goals>
                <configuration>
                  <outputDirectory>${project.build.sourceDirectory}</outputDirectory>
                  <outputEncoding>UTF-8</outputEncoding>
                  <sourceDirectory>${resources.directory}/schemas/config</sourceDirectory>
                  <targetPackage>cc.chordflower.template.basic.application.config.base</targetPackage>
                  <classNamePrefix>Base</classNamePrefix>
                </configuration>
              </execution>
              <execution>
                <id>generate-api-beans</id>
                <phase>generate-sources</phase>
                <goals>
                  <goal>generate</goal>
                </goals>
                <configuration>
                  <outputDirectory>${project.build.sourceDirectory}</outputDirectory>
                  <outputEncoding>UTF-8</outputEncoding>
                  <sourceDirectory>${resources.directory}/schemas/api</sourceDirectory>
                  <targetPackage>cc.chordflower.template.basic.application.api</targetPackage>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <addCompileSourceRoot>false</addCompileSourceRoot>
              <annotationStyle>jackson2</annotationStyle>
              <dateTimeType>java.time.LocalDateTime</dateTimeType>
              <dateType>java.time.LocalDate</dateType>
              <generateBuilders>false</generateBuilders>
              <includeAdditionalProperties>false</includeAdditionalProperties>
              <includeConstructors>false</includeConstructors>
              <includeGetters>true</includeGetters>
              <includeHashcodeAndEquals>false</includeHashcodeAndEquals>
              <includeJsr303Annotations>true</includeJsr303Annotations>
              <includeJsr305Annotations>false</includeJsr305Annotations>
              <includeSetters>true</includeSetters>
              <includeToString>false</includeToString>
              <includeTypeInfo>false</includeTypeInfo>
              <initializeCollections>true</initializeCollections>
              <serializable>true</serializable>
              <sourceType>jsonschema</sourceType>
              <targetVersion>1.8</targetVersion>
              <timeType>java.time.LocalTime</timeType>
              <useBigDecimals>true</useBigDecimals>
              <useBigIntegers>true</useBigIntegers>
              <useLongIntegers>true</useLongIntegers>
              <useOptionalForGetters>false</useOptionalForGetters>
              <useTitleAsClassname>true</useTitleAsClassname>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
